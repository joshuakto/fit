{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["./src/*"],
			"@main": ["./main"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "bundler",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"types": [
			"node",
			"@wdio/globals/types",
			"@wdio/mocha-framework"
		]
	},
	"include": [
		"**/*.ts"
	]
}
